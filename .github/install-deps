#!/usr/bin/env bash
set -euo pipefail

sudo apt-get update
sudo apt-get install capnproto protobuf-compiler

# Install latest crun from GitHub releases
CRUN_VERSION=$(curl -sSfL "https://api.github.com/repos/containers/crun/releases/latest" | grep -oP '"tag_name": "\K[^"]+')
sudo curl -sSfL "https://github.com/containers/crun/releases/download/${CRUN_VERSION}/crun-${CRUN_VERSION}-linux-amd64" -o /usr/bin/crun
crun --version
